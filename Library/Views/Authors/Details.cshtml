@{
  Layout = "_Layout";
}

@using Library.Models
@model Library.Models.Author

<h3>@Model.Name's Details</h3>

<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>

@if (Model.Books.Count == 0)
{
  <p>This author hasn't published any books</p>
}
else
{
  <h4>Books published by @Model.Name</h4>
  <ul>
    @foreach (var join in Model.Books)
    {
      <li>@join.Book.Title</li>
    }
  </ul>
}

<p>@Html.ActionLink("Display authors", "Index")</p>
<p>@Html.ActionLink("Edit author", "Edit", new { id = Model.AuthorId })</p>
<p>@Html.ActionLink("Delete author", "Delete", new { id = Model.AuthorId })</p>